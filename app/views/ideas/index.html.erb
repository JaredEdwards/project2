<h1>Ideas#index</h1>
<h1>List of all Ideas:</h1>
<div class="container-fluid">

<% @ideas.each_with_index do |idea, i |%>

  <div class="row center">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= idea.title %></h3>
          <p><%= idea.content.first(80) %>.....</p>

          <%= link_to "Click to read more", idea_path(idea), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% if i ==5 %>
  <% break %>
<% end %>



<% end %>

<h5><%= link_to "Add your idea here", new_idea_path %></h5>
</div>
