
<h1>Enter your new idea here</h1>
<div class="log-in">

<%= link_to "Back", ideas_path %>

<%= form_for @idea do |f| %>

  <div class="form-group">
    <%= f.label :author %><br />
    <%= f.text_field :author, :required => true, :placeholder=>"Author's Full Name" %><br />
  </div>

  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, :required => true, :placeholder=>'Make it good.. ' %><br />
  </div>
  <br />
  <div class ="form-group">
    <%= f.label :content %><br />
    <%= f.text_area :content, :required => true, :placeholder=>'Lay it on me...'  %>
    <br />

  </div>
  <div>
    <span class="btn-default"><%= f.submit %></span>
  </div>
<% end %>

</div>
